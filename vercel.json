{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.py"
    },
    {
      "source": "/images/(.*)",
      "destination": "/generated_images/$1"
    },
    {
      "source": "/videos/(.*)",
      "destination": "/generated_videos/$1"
    }
  ]
}
